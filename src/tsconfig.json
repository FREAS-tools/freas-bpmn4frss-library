{
  "include": ["**/*"],
  "exclude": ["node_modules"],
  // this option creates declaration files for our TS-based frontend web application
  // so we can use this vanilla JS library while also using TypeScript in the Web App
  "compilerOptions": {
    "module": "ES2015",
    "target": "ESNext",
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    // skip checking bpmn-js internals
    "skipLibCheck": true,
    // allows for jumping straight to the JS files instead of the declarations in IDEs
    "sourceMap": true,
    // allow JS files
    "allowJs": true,
    "checkJs": false,
    "verbatimModuleSyntax": true,
    "rootDir": ".",
    "moduleResolution": "node",
  }
}
