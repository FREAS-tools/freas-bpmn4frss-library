{
  "include": ["**/*"],
  // this option creates declaration files for our TS-based frontend web application
  // so we can use this vanilla JS library while also using TypeScript in the Web App
  "compilerOptions": {
    "module": "ES2015",
    "noImplicitAny": true,
    // generate declarations
    "declaration": true,
    // only emit declarations
    "emitDeclarationOnly": true,
    // where the declarations will live
    "outDir": "types",
    // allows for jumping straight to the JS files instead of the declarations in IDEs
    "declarationMap": true,
    "sourceMap": true,
    // allow JS files
    "allowJs": true,
    "moduleResolution": "node"
  }
}
